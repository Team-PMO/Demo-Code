        "serial_number": "ABC123",
        "purchase_date": "2024-01-01",
        "arrival_date": "2024-01-05",
        "complaint_date": "2024-01-06",
        "return_type": "2",
        "reference_image": "unopened_reference.jpg",
        "test_image": "unopened_test.jpg",
        "tag_image": "tag_image.jpg"
    }
]

for test in TEST_CASES:
    print(f"\nRunning Test Case: {test['name']}")
    serial_number = test['serial_number']
    if serial_number in ['ABC123', 'DEF456']:
        print("âŒ This item is FINAL SALE. No returns allowed.")
        continue

    purchase_date = datetime.strptime(test['purchase_date'], '%Y-%m-%d')
    arrival_date = datetime.strptime(test['arrival_date'], '%Y-%m-%d')
    complaint_date = datetime.strptime(test['complaint_date'], '%Y-%m-%d')
    return_type = test['return_type']

    reference_img = Image.open(test['reference_image'])
    test_img = Image.open(test['test_image'])

    response = model.generate_content([
        reference_img,
        test_img,
        "Compare these images to identify defects. If no defects are found, reply 'NO DEFECTS FOUND'."
    ])
    result = response.text.strip()
    print(f"Gemini result: {result}")

    days_since_arrival = (complaint_date - arrival_date).days

    if return_type == '1':
        if days_since_arrival > 2:
            print("âŒ Return denied: Defective returns must be reported within 1-2 days.")
        elif "NO DEFECTS FOUND" in result.upper():
            print("âŒ Return denied: No defects detected.")
        else:
            print("âœ… Return approved: Defective on arrival.")
            print("ğŸ”„ Vendor Action: Send item to RECYCLING due to confirmed defects.")

    elif return_type == '2':
        if days_since_arrival > 30:
            print("âŒ Return denied: Unopened returns must be within 30 days.")
        elif "NO DEFECTS FOUND" not in result.upper():
            print("âŒ Return denied: Product shows signs of use or defects.")
        else:
            print("âœ… Return approved: Unopened product.")
            print("ğŸ”„ Vendor Action: Place item back into INVENTORY as new.")

    elif return_type == '3':
        if days_since_arrival > 15:
            print("âŒ Return denied: Opened returns must be within 15 days.")
        elif "NO DEFECTS FOUND" not in result.upper():
            print("âŒ Return denied: Product shows defects, not eligible.")
        else:
            print("âœ… Return approved: Opened but unused.")
            print("ğŸ”„ Vendor Action: Repackage and place item back into INVENTORY.")

    elif return_type == '4':
        print("âœ… Return approved")
        print("ğŸ”„ Vendor Action: List item for resale on EBAY as used condition. (Charge user?)")

    elif return_type == '5':
        print("âœ… Return Approved: Used and damaged items are eligible for return.(Charge user?)")
        print("ğŸ”„ Vendor Action: Send item to RECYCLING due to excessive wear.")

    else:
        print("âŒ Invalid return type selected.")
